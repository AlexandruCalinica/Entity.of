{
  "compilerOptions": {
    "strict": true,
    "module": "commonjs",
    "target": "ES6",
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "allowJs": true,
    "lib": [
      "esnext",
      "dom"
    ],
    "rootDir": "src",
    "moduleResolution": "node",
  },
  "exclude": ["node_modules"]
}